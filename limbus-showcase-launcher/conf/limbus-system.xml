<SystemConfiguration>

	<!-- The object factory that creates monitoring information on usage of 
		public components -->
	<!-- <objectFactory class="com.remondis.limbus.system.MonitoringObjectFactory" 
		/> -->

	<!-- Important bootstrap components -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.files.LimbusFileService</requestType>
		<componentType>com.remondis.limbus.files.FileSystemServiceImpl
		</componentType>
	</Component>
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.security.LimbusSecurity</requestType>
		<componentType>com.remondis.limbus.security.LimbusSecurityImpl
		</componentType>
	</Component>
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.logging.LogTarget</requestType>
		<!-- <componentType>com.remondis.limbus.logging.FileSystemLogTarget</componentType> -->
		<componentType>com.remondis.limbus.logging.SystemOutLogTarget
		</componentType>
	</Component>
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.SharedClasspathProvider</requestType>
		<componentType>com.remondis.limbus.EmptySharedClasspathProvider
		</componentType>
	</Component>


	<!-- (Optional) Limbus Deploy Service -->
	<!-- If used, the Limbus Deploy Service must start before the Limbus Engine. -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.DeployService</requestType>
		<componentType>com.remondis.limbus.DeployServiceImpl</componentType>
	</Component>

	<!-- Limbus Engine: No-Op for simple Limbus Container features -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.LimbusEngine</requestType>
		<componentType>com.remondis.limbus.NoOpEngine</componentType>
	</Component>

	<!-- Limbus Core components -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.actions.ActionService</requestType>
		<componentType>com.remondis.limbus.actions.LimbusActionService
		</componentType>
	</Component>

	<!-- Limbus Maintenance Console -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.LimbusMaintenanceConsole
		</requestType>
		<componentType>com.remondis.limbus.LimbusMaintenanceConsoleImpl
		</componentType>
	</Component>

	<!-- Periodic task scheduler -->
	<Component>
		<failOnError>true</failOnError>
		<requestType>com.remondis.limbus.tasks.TaskScheduler</requestType>
		<componentType>com.remondis.limbus.tasks.TaskSchedulerImpl
		</componentType>
	</Component>

	<!-- Limbus Maintenance Components (private) -->
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowEnvironment
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowComponents
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowTasks
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowVersions
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.LogFileViewer
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowSharedClassPath
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowPluginClassPaths
		</componentType>
	</Component>
	<Component>
		<failOnError>false</failOnError>
		<componentType>com.remondis.limbus.maintenance.ShowDeployService
		</componentType>
	</Component>
</SystemConfiguration>